<Window x:Class="VetClinic.Instalaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic"
        mc:Ignorable="d"
        Title="Instalaciones" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="BotonMenu" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Barra de navegación-->
                <Grid Grid.Row="0" Background="#003459" Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="19*"/>
                        <ColumnDefinition Width="136*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Icono del menú desplegable a la izquierda -->
                    <Button Click="MenuButton_Click" Content="☰" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,7,0,17" Foreground="White" Background="#003459" BorderThickness="0"/>

                    <!-- Nombre de la aplicación a la derecha -->
                    <TextBlock Text="Vet Clinic" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,8,19,18" Grid.Column="1"/>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Vertical" Height="auto">
                    <Image Source="fotos/instalaciones_vet02.jpg" Margin="0, 0, 5, 5"/>
                    <Image Source="fotos/inst.jpg" Margin="0, 0, 5, 5"/>
                    <Image Source="fotos/quirofano-equipado-esvet-veterinaria.jpg" Margin="0, 0, 5, 5"/>
                </StackPanel>


                <!-- <Button Content="Mi Botón" Style="{StaticResource MiBotonEstilo}"/> -->
            </Grid>

        </ScrollViewer>

        <Popup x:Name="menuPopup" Placement="Relative" HorizontalOffset="150" VerticalOffset="40" IsOpen="False">
            <Grid Background="White" Width="150" Height="380">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Aquí colocas los elementos del menú -->
                <Button Style="{StaticResource BotonMenu}" Content="Home" HorizontalAlignment="Left" Grid.Row="0" Click="MenuItem_Click"/>
                <Button Style="{StaticResource BotonMenu}" Content="Instalaciones" HorizontalAlignment="Left" Grid.Row="1" Click="MenuItem_Click"/>
                <Button Style="{StaticResource BotonMenu}" Content="Log In" HorizontalAlignment="Left" Grid.Row="2" Click="MenuItem_Click"/>
                <Button Style="{StaticResource BotonMenu}" Content="Adopción" HorizontalAlignment="Left" Grid.Row="3" Click="MenuItem_Click"/>
            </Grid>
        </Popup>
    </Grid>
</Window>
