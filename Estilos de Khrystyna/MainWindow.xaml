<Window x:Class="Estilos_de_Khrystyna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Estilos_de_Khrystyna"
        mc:Ignorable="d"
        Title="MainWindow" Height="1030" Width="1440">

	<Window.Resources>
		<Style x:Key="AparienciaBotones" TargetType="Button">
			<Setter Property="Background" Value="#007EA7"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontFamily" Value="Arial"/>
			<Setter Property="Height" Value="30"/>
			<Setter Property="Width" Value="110"/>
			<Setter Property="Margin" Value="5"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Button Style="{StaticResource AparienciaBotones}" Name="btnEj" Content="Botón de ejemplo" HorizontalAlignment="Left" VerticalAlignment="Top"/>

	</Grid>
</Window>